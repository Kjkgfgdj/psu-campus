{
  "$schema": "https://design-tokens.org/schema/third-editors-draft/tokens.schema.json",
  "color": {
    "brand": {
      "$type": "color",
      "primary": {
        "$value": "#16A34A",
        "$description": "Primary brand color - PSU Green"
      },
      "primary-hover": {
        "$value": "#15803D",
        "$description": "Primary hover state"
      },
      "primary-light": {
        "$value": "#22C55E",
        "$description": "Lighter primary variant"
      },
      "accent": {
        "$value": "#10B981",
        "$description": "Emerald accent for premium feel"
      }
    },
    "neutral": {
      "$type": "color",
      "950": { "$value": "#0F172A" },
      "900": { "$value": "#1E293B" },
      "800": { "$value": "#334155" },
      "700": { "$value": "#475569" },
      "600": { "$value": "#64748B" },
      "500": { "$value": "#94A3B8" },
      "400": { "$value": "#CBD5E1" },
      "300": { "$value": "#E2E8F0" },
      "200": { "$value": "#F1F5F9" },
      "100": { "$value": "#F8FAFC" },
      "50": { "$value": "#FFFFFF" }
    },
    "semantic": {
      "$type": "color",
      "success": { "$value": "#16A34A" },
      "warning": { "$value": "#F59E0B" },
      "error": { "$value": "#DC2626" },
      "info": { "$value": "#0EA5E9" }
    },
    "surface": {
      "$type": "color",
      "page": { "$value": "#F8FAFC", "$description": "Main page background" },
      "card": { "$value": "#FFFFFF", "$description": "Card/elevated surface" },
      "overlay": { "$value": "rgba(15, 23, 42, 0.8)", "$description": "Modal/dialog overlay" }
    }
  },
  "spacing": {
    "$type": "dimension",
    "0": { "$value": "0" },
    "1": { "$value": "0.25rem" },
    "2": { "$value": "0.5rem" },
    "3": { "$value": "0.75rem" },
    "4": { "$value": "1rem" },
    "5": { "$value": "1.25rem" },
    "6": { "$value": "1.5rem" },
    "8": { "$value": "2rem" },
    "10": { "$value": "2.5rem" },
    "12": { "$value": "3rem" },
    "16": { "$value": "4rem" },
    "20": { "$value": "5rem" },
    "24": { "$value": "6rem" }
  },
  "typography": {
    "font-family": {
      "$type": "fontFamily",
      "sans": { "$value": ["Inter", "system-ui", "-apple-system", "sans-serif"] },
      "display": { "$value": ["Geist Sans", "Inter", "system-ui", "sans-serif"] },
      "mono": { "$value": ["Geist Mono", "ui-monospace", "monospace"] }
    },
    "font-size": {
      "$type": "dimension",
      "xs": { "$value": "0.75rem", "$description": "12px" },
      "sm": { "$value": "0.875rem", "$description": "14px" },
      "base": { "$value": "1rem", "$description": "16px" },
      "lg": { "$value": "1.125rem", "$description": "18px" },
      "xl": { "$value": "1.25rem", "$description": "20px" },
      "2xl": { "$value": "1.5rem", "$description": "24px" },
      "3xl": { "$value": "1.875rem", "$description": "30px" },
      "4xl": { "$value": "2.25rem", "$description": "36px" },
      "5xl": { "$value": "3rem", "$description": "48px" },
      "6xl": { "$value": "3.75rem", "$description": "60px" },
      "7xl": { "$value": "4.5rem", "$description": "72px" },
      "8xl": { "$value": "6rem", "$description": "96px" }
    },
    "font-weight": {
      "$type": "number",
      "light": { "$value": 300 },
      "normal": { "$value": 400 },
      "medium": { "$value": 500 },
      "semibold": { "$value": 600 },
      "bold": { "$value": 700 }
    },
    "line-height": {
      "$type": "number",
      "tight": { "$value": 1.25 },
      "snug": { "$value": 1.375 },
      "normal": { "$value": 1.5 },
      "relaxed": { "$value": 1.625 },
      "loose": { "$value": 2 }
    },
    "letter-spacing": {
      "$type": "dimension",
      "tighter": { "$value": "-0.05em" },
      "tight": { "$value": "-0.025em" },
      "normal": { "$value": "0" },
      "wide": { "$value": "0.025em" },
      "wider": { "$value": "0.05em" }
    }
  },
  "radius": {
    "$type": "dimension",
    "none": { "$value": "0" },
    "sm": { "$value": "0.5rem", "$description": "8px" },
    "md": { "$value": "0.75rem", "$description": "12px" },
    "lg": { "$value": "1rem", "$description": "16px" },
    "xl": { "$value": "1.25rem", "$description": "20px" },
    "2xl": { "$value": "1.5rem", "$description": "24px" },
    "3xl": { "$value": "2rem", "$description": "32px" },
    "full": { "$value": "9999px" }
  },
  "shadow": {
    "$type": "shadow",
    "xs": {
      "$value": [
        { "offsetX": "0", "offsetY": "1px", "blur": "2px", "color": "rgba(0, 0, 0, 0.05)" }
      ]
    },
    "sm": {
      "$value": [
        { "offsetX": "0", "offsetY": "1px", "blur": "3px", "color": "rgba(0, 0, 0, 0.1)" },
        { "offsetX": "0", "offsetY": "1px", "blur": "2px", "color": "rgba(0, 0, 0, 0.06)" }
      ]
    },
    "md": {
      "$value": [
        { "offsetX": "0", "offsetY": "4px", "blur": "6px", "color": "rgba(0, 0, 0, 0.07)" },
        { "offsetX": "0", "offsetY": "2px", "blur": "4px", "color": "rgba(0, 0, 0, 0.05)" }
      ],
      "$description": "Default card shadow"
    },
    "lg": {
      "$value": [
        { "offsetX": "0", "offsetY": "10px", "blur": "15px", "color": "rgba(0, 0, 0, 0.1)" },
        { "offsetX": "0", "offsetY": "4px", "blur": "6px", "color": "rgba(0, 0, 0, 0.05)" }
      ]
    },
    "xl": {
      "$value": [
        { "offsetX": "0", "offsetY": "20px", "blur": "25px", "color": "rgba(0, 0, 0, 0.12)" },
        { "offsetX": "0", "offsetY": "10px", "blur": "10px", "color": "rgba(0, 0, 0, 0.04)" }
      ]
    },
    "2xl": {
      "$value": [
        { "offsetX": "0", "offsetY": "25px", "blur": "50px", "color": "rgba(0, 0, 0, 0.15)" }
      ]
    },
    "brand": {
      "$value": [
        { "offsetX": "0", "offsetY": "4px", "blur": "16px", "color": "rgba(22, 163, 74, 0.08)" },
        { "offsetX": "0", "offsetY": "2px", "blur": "4px", "color": "rgba(2, 6, 23, 0.04)" }
      ],
      "$description": "Brand-tinted shadow for premium feel"
    }
  },
  "duration": {
    "$type": "duration",
    "instant": { "$value": "0ms" },
    "fast": { "$value": "150ms" },
    "normal": { "$value": "300ms" },
    "slow": { "$value": "500ms" },
    "slower": { "$value": "700ms" }
  },
  "easing": {
    "$type": "cubicBezier",
    "standard": { "$value": [0.4, 0.0, 0.2, 1] },
    "emphasized": { "$value": [0.2, 0.0, 0, 1] },
    "decelerated": { "$value": [0.0, 0.0, 0.2, 1] },
    "accelerated": { "$value": [0.4, 0.0, 1, 1] }
  },
  "focus": {
    "ring": {
      "$type": "dimension",
      "width": { "$value": "3px", "$description": "WCAG 2.2 AA compliant focus ring" },
      "offset": { "$value": "2px" }
    },
    "color": {
      "$type": "color",
      "$value": "rgba(22, 163, 74, 0.3)",
      "$description": "Accessible focus ring color"
    }
  }
}

